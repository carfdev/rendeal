---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  class?: string | undefined;
}

const { src, alt, class: className } = Astro.props;
---

<div class={`${className} relative`}>
  <Image
    src={src}
    alt={alt}
    class="absolute top-0 left-0 w-full h-full"
    width={100}
    height={100}
    loading={"eager"}
  />
</div>
